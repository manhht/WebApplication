@model WebApplication.Model.Issue

@{
    ViewBag.Title = "GridView Details Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-content">
    <h1 class="title" id="SubjectText">@Model.Subject</h1>
    <p>Issue #@Model.Id</p>
    <hr />
    <p>This is the GridView details page.</p>
</div>

<div class="text-content" style="padding-top:15px">
    <div class="col-md-12">
        <div class="col-md-6">
            @using (Html.BeginForm("UnobtrusiveValidation", "Common", FormMethod.Post, new { id = "validationForm", @class = "edit_form" }))
            {
                @Html.DevExpress().TextBoxFor(m => m.Subject, s => {
               s.Name = "Subject";
           }).GetHtml()
                @Html.DevExpress().ValidationSummary().GetHtml()
            }
        </div>
    </div>
</div>
